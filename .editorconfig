# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
insert_final_newline = false

# Задаем форматирование для TS
[*.ts]
indent_size = 4
quote_type = double

# Не переформатируем минифицированные JS и CSS файлы.
[*.min.*]
indent_style = ignore

[*.cs]
indent_size = 4
